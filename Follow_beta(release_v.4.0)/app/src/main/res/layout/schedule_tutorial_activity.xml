<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/schedule_tu2" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/schedule_tu3" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/schedule_tu5" />


        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/schedule_tu8" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/schedule_tu10" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/schedule_tu11" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/schedule_tu12" />

        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:text="종료" />
    </LinearLayout>
</HorizontalScrollView>